<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spaceship_view_form" model="ir.ui.view">
        <field name="name">space.ship.view.form</field>
        <field name="model">space.spaceship</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="number"/>
                            <field name="device_type"/>
                            <field name="contact_id"/>
                        </group>
                        <group>
                            <field name="cost_per_gallon"/>
                            <field name="gallons_per_tank"/>
                            <field name="cost_per_tank"/>
                        </group>
                        <group>
                            <field name="ship_height"/>
                            <field name="ship_length"/>
                            <field name="ship_width"/>
                            <field name="ship_volume"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="spaceship_view_tree" model="ir.ui.view">
        <field name="name">space.ship.view.tree</field>
        <field name="model">space.spaceship</field>
        <field name="arch" type="xml">
            <tree string="Spaceships">
                <field name="name" readonly="1"/>
                <field name="number" readonly="1"/>
                <field name="device_type" readonly="1"/>
                <field name="contact_id" readonly="1"/>
                <field name="ship_volume" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">spaceship.base.view_partner_form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" position="after">
                            <field name="spaceship_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
